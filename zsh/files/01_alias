#!/bin/zsh
# File 01_alias; common shell alias initialization

# Create kebab-case aliases for cmd:snake_case functions
# Iterate over all defined functions (keys of the 'functions' special associative array)
local func_name kebab_name
for func_name in ${(k)functions}; do
  # Check if the function name contains an underscore (likely snake_case)
  if [[ "${func_name}" == cmd:* ]]; then
    echo "${func_name}"
    # Convert cmd:snake_case to kebab-case using parameter expansion
    kebab_name="${func_name//_/-}" && kebab_name="${kebab_name#cmd:}"

    # Ensure the kebab-case name is different from the original
    # and that no command (alias, function, builtin, external)
    # already exists with the kebab-case name.
    if [[ "${kebab_name}" != "${func_name}" ]] && ! command -v "${kebab_name}" > /dev/null 2>&1; then
      alias "${kebab_name}=${func_name}"
      (( ZSH_DEBUG_INIT )) && echo "Aliased: ${kebab_name} -> ${func_name}"
    fi
  fi
done

unset func_name kebab_name

# Command replacements
if fun:has_command bat; then
  alias cat='bat'
fi

if fun:has_command duf; then
  alias df='duf'
else
  alias df='df -h'
fi

if fun:has_command gdu; then
  alias du='gdu'
else
  alias du='du -h'
  alias ds='du -hs'
fi

if fun:has_command eza; then
  alias ls="eza ${LS_ARGS}"
  alias ll="eza ${LS_ARGS} -l"
  alias la="eza ${LS_ARGS} -a"
  alias lla="eza ${LS_ARGS} -al"
else
  alias ls="ls ${LS_ARGS}"
  alias ll="ls ${LS_ARGS} -l"
  alias la="ls ${LS_ARGS} -a"
  alias lla="ls ${LS_ARGS} -al"
fi

if fun:has_command docker; then
  alias docker-images="docker images | grep -v repo | sed 's/ \+/:/g' | cut -d: -f1,2"
  alias docker-update="docker images | xargs -L1 docker pull"
  alias docker-prune="docker system prune -a -f"
fi

# Shell command alias
alias cls="clear && printf '\e[3J'"
alias which='command -v'
alias shdir="cd ${ZDOTDIR}"

# Make some of the file manipulation programs verbose
alias mv='mv -v'
alias cp='cp -v'

# Colorize the grep command output;
# Good for your eyes when reading long log files
alias grep='grep -i --color=auto'
alias egrep='egrep -i --color=auto'
alias fgrep='fgrep -i --color=auto'

# Allow aliases to be sudoâ€™ed
alias sudo='sudo '

# Reloads the current shell
alias reload="exec ${SHELL} -l"
