# -*- mode: sh -*-
# File : os_name; Show name of operating system family.
# Usage: os_name

ostype() {
  case "$OSTYPE" in
    bsd*)
      stdout "bsd"
      ;;
    darwin*)
      stdout "macos"
      ;;
    linux*)
      stdout "linux"
      ;;
    solaris*)
      stdout "solaris"
      ;;
    *)
      stderr "Unknown: $OSTYPE"
      return 1
      ;;
  esac
}
