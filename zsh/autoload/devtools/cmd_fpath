#!/bin/zsh

cmd_fpath() {
  if fn_check_command -q realpath; then
    realpath -m "${@}"
    return $?
  fi

  local code=$(cat <<'EOF'
import os
import sys

for arg in sys.argv[1:]:
  try:
    print(os.path.realpath(arg))
  except OSError as e:
    print(f"realpath: {arg}: {e}", file=sys.stderr)
    exit(1)
EOF
)

  python3 -c "${code}" "${@}"
}
